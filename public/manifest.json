{
  "manifest_version": 3,
  "name": "CoinWatch",
  "version": "1.0.0",
  "description": "Track cryptocurrency prices and market data",
  "permissions": [
    "storage",
    "alarms"
  ],
  "host_permissions": [
    "https://api.coingecko.com/*"
  ],
  "action": {
    "default_popup": "index.html",
    "default_icon": {
      "128": "icons/icon128.png"
    },
    "default_width": 400,
    "default_height": 600
  },
  "icons": {
    "128": "icons/icon128.png"
  },
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self' 'wasm-unsafe-eval'; object-src 'self'; connect-src 'self' https://api.coingecko.com/"
  },
  "web_accessible_resources": [{
    "resources": ["index.html", "assets/*", "icons/*"],
    "matches": ["<all_urls>"]
  }]
} 